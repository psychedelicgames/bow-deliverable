<!-- Modal New User -->
<div id="kard-new-user" class="kard-modal kard-new-user">
	
		<div class="kard">
			<div id="resume-container" class="kard-info f-fadeIn" style="display: none;">
				<div class="kard-header">
					<h5 class="kard-subtitle-navigation">
						<span id="kard-new-user-resume">Resume</span>
						<span id="kard-new-user-register" class="unselected">Create New Profile</span>
					</h5>
				</div>				
				<div class="kard-body">
					<div class="container">
						<div class="row">
							<div class="col-6">
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text"><i class="fas fa-user-plus"></i></span>
									</div>
									<input id="name-input" type="text" class="form-control" placeholder="Username" aria-label="Username">
								</div>
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text"><i class="fas fa-key"></i></span>
									</div>
									<input id="pass-input" type="password" class="form-control" placeholder="Password" aria-label="Password">
								</div>
								<div class="input-group mb-3">
									<div class="input-group-prepend">
										<span class="input-group-text"><i class="fas fa-lock-alt"></i></span>
									</div>
									<input id="mfa-code-input" type="text" class="form-control" placeholder="2FA (if enabled)" aria-label="2FA (if enabled)">
								</div>
								<span id="alert-message-resume" class="text-alert font-small"></span>					
							</div>
						</div>
					</div>
				</div>
				<div class="kard-footer">
					<button id="name-submit" type="button" class="btn btn-custom-one">log in</button>
